@model Universidad.Data.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid">
    @using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
    {
        <div class="row">

            <div class="col-6 col-sm-6 col-md-4 col-md-offset-4">
                @Html.AntiForgeryToken()
                <form class="form-container login-form">
                    <div class="form-group">
                        <h4 class="text-center font-weight-bold"> Login </h4>
                        @*<label for="inputDni">DNI</label>
                            <input type="text" class="form-control" id="inputDni" aria-describeby="dni" placeholder="Ingrese dni">*@
                        @Html.LabelFor(Model => Model.dni, "DNI: ")<br />
                        @Html.EditorFor(Model => Model.dni)
                        <br />
                        <div class="alert-danger">
                            @Html.ValidationMessageFor(Model => Model.dni)
                        </div>
                    </div>
                    <div class="form-group">
                        @*<label for="inputLegajo">Legajo</label>
                            <input type="text" class="form-control" id="inputLegajo" placeholder="Ingrese legajo">*@
                        @Html.LabelFor(Model => Model.legajo, "Legajo: ")<br />
                        @Html.EditorFor(Model => Model.legajo)
                        <br />
                        <div class="alert-danger">
                            @Html.ValidationMessageFor(Model => Model.legajo)
                        </div>
                    </div>
                    <div class="form-check">
                        @*<input class="form-check-input" type="checkbox" value="" id="isAdminCheckbox">
                            <label class="form-check-label" for="isAdminCheckbox">
                                Es administrador?
                            </label>*@
                        @Html.EditorFor(Model => Model.is_admin)
                        @Html.LabelFor(Model => Model.is_admin, "Es administrador?")

                    </div>

                    <div class="form-footer">
                        <p>@ViewBag.ErrorMessage</p>
                        <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
                    </div>
                </form>
            </div>
        </div>
    }
</section>