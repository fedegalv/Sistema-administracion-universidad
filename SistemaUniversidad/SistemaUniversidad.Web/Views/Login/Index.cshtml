@model Universidad.Data.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container-fluid">
    @using (Html.BeginForm("Autorizar", "Login", FormMethod.Post))
    {
        <div class="row">

            <div class="col-6 col-sm-6 col-md-4 col-md-offset-4">
                @Html.AntiForgeryToken()
                <form class="form-container login-form">
                    <div class="form-group">
                        <h3 class="text-center font-weight-bold login-message-margin"> Ingrese sus credenciales de usuario:  </h3>
                        
                        @Html.LabelFor(Model => Model.Dni, "DNI: ")<br />
                        @Html.EditorFor(Model => Model.Dni)
                        <br />
                        <div class="alert-danger">
                            @Html.ValidationMessageFor(Model => Model.Dni)
                        </div>
                    </div>
                    <div class="form-group">
                       
                        @Html.LabelFor(Model => Model.Legajo, "Legajo: ")<br />
                        @Html.EditorFor(Model => Model.Legajo)
                        <br />
                        <div class="alert-danger">
                            @Html.ValidationMessageFor(Model => Model.Legajo)
                        </div>
                    </div>
                    <div class="form-check">

                        @Html.LabelFor(Model => Model.EsAdmin, "Es administrador?")
                        @Html.EditorFor(Model => Model.EsAdmin)

                    </div>

                    <div class="form-footer">
                        <p class="alert-danger">@ViewBag.ErrorMessage</p>
                        <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
                    </div>
                </form>
            </div>
        </div>
    }
</section>