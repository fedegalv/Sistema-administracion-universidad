@model Universidad.Data.Models.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Alumno/_AlumnoLayout.cshtml";
    if (Session["userId"] == null || (bool)Session["userIsAdmin"])
    {
        Response.Redirect("~/Login/Index");
    }
}

<h2>Bienvenido al menu de alumno</h2>

<div>
    <h4>Informacion del usuario:</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Dni)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Dni)
        </dd>

    </dl>
</div>
<h4>Materias en la que esta anotado</h4>
@Html.Action("_mostrarMateriasAlumnos", "Alumno", new { id = Model.Id })